#include <stdio.h>

#include<conio.h> 

void main()

{

    int n,i, t,p[20],bt[20],j,wt[20],tat[20];

    float awt=0,atat=0;

    printf("enter no of process : ");

    scanf("%d",&n);

    printf("entrr the process numbers : ");

    for(i=0;i<n;i++)

        scanf("%d",&p[i]);

    printf("enter the burst numbers : ");

    for (i=0;i<n;i++)

        scanf("%d",&bt[i]);

    for(i=0;i<n;i++)

    {

        for(j=0;j<n-i-1;j++)

        {

            if(bt[j]>bt[j+1])

            {

                t=bt[j];

                bt[j]=bt[j+1];

                bt[j+1]=t;

            

                t=p[j];

                p[j]=p[j+1];

                p[j+1]=t;

            }

        }

    }

    printf("process \t burst timr \t waiting time \t turnat \n");

    for(i=0;i<n;i++)

    {

        wt[i]=0;

        tat[i]=0;

        for(j=0;j<i;j++)

        {

            wt[i]=wt[i]+bt[j];

        }

        tat[i]=wt[i]+bt[i];

        awt = awt+wt[i];

        atat=atat+tat[i];

        printf("%d\t %d\t\t %d\t\t %d\n",p[i],bt[i],wt[i],tat[i]);

    }

    awt=awt/n;

    atat=atat/n;

    printf("awt is %f\n",awt);

    printf("atat is %f\n",atat);

    

    getch();

}

